<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}BirdSafari{% endblock %}</title>
    {% block css %}
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ asset('css/mainStyle.css') }}" rel="stylesheet">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('img/apple-touch-icon.png') }}" />
</head>
<body>
<div class="container-fluid">

    <nav class="navbar navbar-default" role="navigation">

        <div class="navbar-header">
            <p class="navbar-brand"><img src="apple-touch-icon.png" alt="Logo du site: Bird Safari"></p></div>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menuPrincipal">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse" id="menuPrincipal">
            <ul class="nav navbar-nav navbar-right">

                <li>
                    <a href="{{ path('home') }}" class="text-center"> <!---->
                        <span class="glyphicon glyphicon-home"></span> Accueil
                    </a>
                </li>




                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Bienvenue {{ app.user.username }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('fos_user_profile_show') }}">Profil</a></li>
                            <li><a href="#obsOuNaturalisation">{% if not is_granted("ROLE_ADMIN") %}En attente{% endif %}</a></li>
                            <li>{% if is_granted("ROLE_NATURALIST") %}Mes articles{% endif %}</li>
                        </ul>
                    </li>
                {% else %}
                    <li>
                        <a href="">
                            Connexion
                        </a>
                    </li>
                {% endif %}

                {% if is_granted("ROLE_ADMIN") %}
                <li>
                    <a href="#" class="text-center">
                        Administration
                    </a>
                </li>
                {% endif %}
                <li>
                    <a href="{{ path('mission') }}" class="text-center">
                        Notre mission
                    </a>
                </li>

            </ul>
        </div>
    </nav>
</div>


    {% block body %}{% endblock %}

<footer>
    {% block foot %}{% endblock %}
</footer>

{% block js %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>